{
  "name": "esbuild-plugin-file-path-extensions",
  "version": "2.1.4",
  "description": "An esbuild plugin to automatically insert file extensions in your built JavaScript files based on the specified target",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "type": "module",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "author": "Favware",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src tests --ext ts --fix",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "test": "vitest run",
    "test:clean": "node scripts/clean-test-output.mjs",
    "build": "tsup",
    "bump": "cliff-jumper",
    "check-update": "cliff-jumper --dry-run",
    "prepack": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@favware/cliff-jumper": "6.0.0",
    "@sapphire/eslint-config": "^5.0.5",
    "@sapphire/prettier-config": "^2.0.0",
    "@sapphire/result": "^2.7.2",
    "@sapphire/ts-config": "^5.0.1",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.24.2",
    "esbuild-plugin-version-injector": "^1.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.5.2",
    "vitest": "^3.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/esbuild-plugin-file-path-extensions.git"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=v14.0.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "esbuild",
    "esbuild plugin",
    "esbuild-plugin"
  ],
  "bugs": {
    "url": "https://github.com/favware/esbuild-plugin-file-path-extensions/issues"
  },
  "homepage": "https://github.com/favware/esbuild-plugin-file-path-extensions#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "minimist": "^1.2.8"
  },
  "eslintConfig": {
    "extends": "@sapphire"
  },
  "packageManager": "yarn@4.6.0"
}
